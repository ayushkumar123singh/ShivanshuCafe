<script>
    let slides = document.querySelectorAll(".slide");
    let dotsContainer = document.querySelector(".slider-dots");
    let index = 0;
    let typingInterval;

    slides.forEach(() => dotsContainer.innerHTML += "<span></span>");
    let dots = dotsContainer.querySelectorAll("span");

    function typeText(el) {
        // Stop old typing interval
        clearInterval(typingInterval);

        let text = el.dataset.text;
        el.textContent = ""; // clear previous text

        let i = 0;
        let speed = 80;

        typingInterval = setInterval(() => {
            el.textContent += text.charAt(i);
            i++;
            if (i === text.length) clearInterval(typingInterval);
        }, speed);
    }

    function changeSlide() {
        slides.forEach(s => s.classList.remove("active"));
        dots.forEach(d => d.classList.remove("active-dot"));

        slides[index].classList.add("active");
        dots[index].classList.add("active-dot");

        let textElement = slides[index].querySelector(".typing-text");

        // ⭐ Reset text before typing new one
        textElement.textContent = "";

        typeText(textElement);

        index = (index + 1) % slides.length;
    }

    changeSlide();
    setInterval(changeSlide, 4000);
</script>

